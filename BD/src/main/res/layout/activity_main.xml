<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    android:backgroundTint="@color/light"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/montaga"
            android:text="Tables"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2sp"
                app:srcCompat="@drawable/image34" />

            <EditText
                android:id="@+id/text_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="30sp"
                android:ems="10"
                android:hint="Login"
                android:inputType="text" />

            <EditText
                android:id="@+id/text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10sp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50sp"
                android:fontFamily="@font/montaga"
                android:text="Login"
                android:textSize="24sp"
                android:drawableLeft="@drawable/vwkey"
                android:drawableRight="@drawable/vwkeyr"
                android:paddingHorizontal="5sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/loginbutton"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montaga"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginTop="50sp"
                android:background="@color/darkred"
                android:textColor="@color/black"
                android:text="Список привилегий" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border"
                android:padding="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montaga"
                    android:text="Текущий статус:  "
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montaga"
                    android:textAlignment="center"
                    android:textColor="@color/purple_500"
                    android:textSize="20sp"
                    android:text="Пользователь" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montaga"
                android:textAlignment="center"
                android:background="@drawable/defaultbutton"
                android:textSize="20sp"
                android:layout_marginHorizontal="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:drawableRight="@drawable/gal2"
                android:paddingRight="5sp"
                android:paddingVertical="5sp"
                android:text="Полный доступ к информации" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montaga"
                android:background="@drawable/defaultbutton"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10sp"
                android:drawableRight="@drawable/gal2"
                android:paddingRight="5sp"
                android:paddingVertical="5sp"
                android:text="Полный доступ к запросам" />

            <Button
                android:id="@+id/button25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/defaultbutton"
                android:clickable="false"
                android:drawableRight="@drawable/gal2"
                android:paddingVertical="5sp"
                android:paddingRight="5sp"
                android:text="Совершить поставку"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/defaultbutton"
                android:layout_marginHorizontal="100sp"
                android:layout_marginTop="10sp"
                android:textSize="20sp"
                android:drawableRight="@drawable/gal2"
                android:paddingRight="5sp"
                android:fontFamily="@font/montaga"
                android:paddingVertical="5sp"
                android:clickable="false"
                android:textStyle="bold"
                android:text="Change elem" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/querybuttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:layout_marginTop="5sp"
            android:visibility="gone"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshapetop"
                android:shadowColor="#0B22FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#0B22FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#0B22FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#0B22FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#0B22FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#0B22FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#0B22FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:shadowColor="#0B22FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshapebottom"
                android:shadowColor="#0B22FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/table1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:weightSum="100"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button15"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:background="@drawable/defaultbutton"
                android:fontFamily="@font/montaga"
                android:text="Firm"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button17"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_weight="25"
                android:background="@drawable/defaultbutton"
                android:fontFamily="@font/montaga"
                android:text="Department"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button18"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_weight="20"
                android:background="@drawable/defaultbutton"
                android:text="State"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/montaga" />

            <Button
                android:id="@+id/button19"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:textAllCaps="false"
                android:layout_marginStart="5sp"
                android:background="@drawable/defaultbutton"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/montaga"
                android:text="Product" />

            <Button
                android:id="@+id/button20"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:textAllCaps="false"
                android:layout_marginStart="5sp"
                android:background="@drawable/defaultbutton"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/montaga"
                android:text="Directory" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/table2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:weightSum="100"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button21"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:textAllCaps="false"
                android:background="@drawable/defaultbutton"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/montaga"
                android:text="Provider" />

            <Button
                android:id="@+id/button22"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:textAllCaps="false"
                android:layout_marginStart="5sp"
                android:background="@drawable/defaultbutton"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/montaga"
                android:text="Purchase" />

            <Button
                android:id="@+id/button23"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:textAllCaps="false"
                android:layout_marginStart="5sp"
                android:background="@drawable/defaultbutton"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/montaga"
                android:text="Product Purchase" />

            <Button
                android:id="@+id/button24"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:textAllCaps="false"
                android:layout_marginStart="5sp"
                android:background="@drawable/defaultbutton"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/montaga"
                android:text="Product by Department" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opisanie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/border"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/opis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5sp"
                android:text="Описание: Допустим в чем заключается первый запрос"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/grey"
                android:fontFamily="@font/montaga"
                android:text="Выберите отдел"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/radio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone_Sales" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Head_Office" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Translate_Agency" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/grey"
                android:fontFamily="@font/montaga"
                android:text="Выберите Id продукта"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:max="8"
                android:progress="1"

                />

            <TextView
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="0" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_above="@+id/down"
        android:layout_below="@+id/upper"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="5sp"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/table"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5sp"
        android:layout_marginBottom="5sp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonshapetopclicked"
            android:fontFamily="@font/saira_stencil_one"
            android:shadowColor="#0B22FF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="Tables"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:fontFamily="@font/saira_stencil_one"
            android:shadowColor="#0B22FF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="Apanel"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonshapebottom"
            android:fontFamily="@font/saira_stencil_one"
            android:shadowColor="#0B22FF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="Queries"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>

</RelativeLayout>
